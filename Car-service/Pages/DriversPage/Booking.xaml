<Page x:Class="Car_service.Pages.DriversPage.Booking"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Car_service.Pages.DriversPage"
      mc:Ignorable="d" 
      Loaded="Page_Loaded"
      d:DesignHeight="720" d:DesignWidth="880"
      Title="Booking">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="600"/>
            <RowDefinition Height="120"/>
        </Grid.RowDefinitions>
        <ScrollViewer Grid.Row="0">
            <WrapPanel x:Name="wrpBooking" Margin="20">

            </WrapPanel>
        </ScrollViewer>
        <StackPanel Grid.Row="1" VerticalAlignment="Center"
                    HorizontalAlignment="Right">
            <Button x:Name="btnFinish"
                    Style="{DynamicResource btnSignUp}"
                    Content="Finish"
                    Width="200"
                    Height="50"
                    Margin="0 0 100 0"
                    BorderBrush="Red"
                    BorderThickness="1"
                    Click="btnFinish_Click">
                
            </Button>
        </StackPanel>
    </Grid>
</Page>
