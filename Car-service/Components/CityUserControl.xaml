<UserControl x:Class="Car_service.Components.CityUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Car_service.Components"
             mc:Ignorable="d" 
             Loaded="UserControl_Loaded"
             d:DesignHeight="40" d:DesignWidth="80">
    <Border MouseEnter="Border_MouseEnter" MouseLeave="Border_MouseLeave" MouseDown="Border_MouseDown" >
        <Label Margin="0 0 0 0"
                    x:Name="lbname"
                    Content="Cities"
                    VerticalAlignment="Center"
                       FontSize="12"
                    HorizontalAlignment="Left"
                    >
    </Label>
    </Border>
</UserControl>
